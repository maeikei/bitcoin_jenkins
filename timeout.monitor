#!/usr/bin/perl

while (1) {
  $clang_result = `top -b -n 1 | grep clang | grep findbugs`;
  if(not $clang_result eq "")
  {
    print $clang_result;
    $clang_result =~ /(\d+):\d\d.\d\d/;
	$time = $1;
    print "time = $time \n";
    if($time gt 10 ) {
      $clang_result =~ /(\d+) findbugs /;
	  $id = $1;
      print"kill over time process id = $id \n";
      kill 9,$id;
    }
  }
  my $task = 'task.runing';
  if (not -f $task) {
    break;
  }
  sleep 10;
}
